{% extends 'base.html.twig' %}

{% block body %}
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>#</th>
                <th>Category name</th>
                <th>Nr of tasks</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">{{ category.id }}</th>
                <td>{{ category.name }}</td>
                <td>{{ category.tasks|length }}</td>
                <td>
                    <div class="d-flex flex-row">
                        <div class="p-2 text-center">
                            <a href="{{ path('edit_category', {'id': category.id}) }}" class="btn btn-success">Edit</a>
                        </div>
                        {% if category.tasks|length < 1 %}
                        <div class="p-2 text-center">
                            {{ form_start(delete_form) }}
                            <button class="btn btn-danger" type="submit">Delete</button>
                            {{ form_end(delete_form) }}
                        </div>
                        {% endif %}
                        <div class="p-2 text-center">
                            <a href="{{ path('index_category') }}" class="btn btn-dark">Category List</a>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

{% endblock %}

{% block title %}
    Category Details
{% endblock %}

