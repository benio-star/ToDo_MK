{% extends 'base.html.twig' %}

{% block body %}
    <table class="table">
        <thead class="thead-inverse">
        <tr>
            <th>#</th>
            <th>Category name</th>
            <th>Nr of tasks</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>

        {% for category in categories %}

            <tr>
                <th scope="row">{{ category.id }}</th>
                <td><a href="{{ path('show_category', { 'id': category.id }) }}"> {{ category.name }}</a></td>
                <td>{{ category.tasks|length }}</td>
                <td>
                    <div class="d-flex flex-row">
                        <div class="p-2 text-center">
                            <a href="{{ path('edit_category', {'id': category.id}) }}" class="btn btn-success">Edit</a>
                        </div>
                    </div>
                </td>
            </tr>

        {% else %}
            <div class="alert alert-primary" role="alert">
                <p>You have no categories set!</p>
                <p>You do not like to generalize, right?</p>
            </div>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}

{% block title %}
    Your categories
{% endblock %}

